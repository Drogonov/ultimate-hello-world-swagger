  "components": {
    "securitySchemes": {
      "access-token": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http"
      },
      "refresh-token": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http"
      }
    },
    "schemas": {
      "LanguageCodeRequestDto": {
        "type": "object",
        "properties": {
          "languageCode": {
            "type": "string",
            "description": "The language code for the request",
            "example": "en"
          }
        },
        "required": [
          "languageCode"
        ]
      },
      "HelloResponseDto": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "Hello World"
          },
          "text": {
            "type": "string",
            "example": "How are you?"
          },
          "emoji": {
            "type": "string",
            "example": "ðŸ‘‹"
          },
          "buttonTitle": {
            "type": "string",
            "example": "Say hello back"
          }
        },
        "required": [
          "title"
        ]
      },
      "CountryResponseDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "United States"
          },
          "languageName": {
            "type": "string",
            "example": "English"
          },
          "languageCode": {
            "type": "string",
            "example": "en"
          },
          "emoji": {
            "type": "string",
            "example": "ðŸ‡ºðŸ‡¸"
          },
          "isCurrent": {
            "type": "boolean",
            "example": true
          }
        },
        "required": [
          "name",
          "languageName",
          "languageCode",
          "emoji",
          "isCurrent"
        ]
      },
      "CountriesResponseDto": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "Available Countries"
          },
          "countries": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CountryResponseDto"
            }
          }
        },
        "required": [
          "title",
          "countries"
        ]
      },
      "InfoResponseDto": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "Information Title"
          },
          "imageUrl": {
            "type": "string",
            "example": "https://example.com/image.png"
          },
          "text": {
            "type": "string",
            "example": "This is some information text."
          },
          "buttonTitle": {
            "type": "string",
            "example": "Click Here"
          },
          "deeplink": {
            "type": "string",
            "example": "myapp://deeplink"
          }
        },
        "required": [
          "title",
          "imageUrl",
          "text",
          "buttonTitle",
          "deeplink"
        ]
      },
      "MagicResponseDto": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "Magic Title"
          },
          "mainText": {
            "type": "string",
            "example": "Here is some main text."
          },
          "jokeText": {
            "type": "string",
            "example": "This is a joke text."
          },
          "infoText": {
            "type": "string",
            "example": "Additional info text."
          }
        },
        "required": [
          "title",
          "mainText",
          "jokeText",
          "infoText"
        ]
      },
      "AuthRequestDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "The users email",
            "example": "test@test.com"
          },
          "password": {
            "type": "string",
            "description": "The users password",
            "example": "qqqqqqqq"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "SignUpResponseDto": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "Successful"
          }
        },
        "required": [
          "status"
        ]
      },
      "ErrorResponseDto": {
        "type": "object",
        "properties": {
          "errorMsg": {
            "type": "string",
            "example": "This email already in use"
          },
          "errorSubCode": {
            "type": "string",
            "example": "EMAIL_ALREADY_IN_USE"
          },
          "errorFields": {
            "description": "Array of fields with specified errors",
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "errorMsg",
          "errorSubCode",
          "errorFields"
        ]
      },
      "TokensResponseDto": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string",
