          },
          "refresh_token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOjUsImVtYWlsIjoidGVzdDEyM0B0ZXN0LmNvbSIsImlhdCI6MTczMTkxNDg0NCwiZXhwIjoxNzMyNTE5NjQ0fQ.sj5t3EUFMDhai_t2xyzdNtKMVjNGTRhjQYNMZtwu0Xk"
          }
        },
        "required": [
          "access_token",
          "refresh_token"
        ]
      },
      "LogoutResponseDto": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "Successful"
          }
        },
        "required": [
          "status"
        ]
      }
    }
